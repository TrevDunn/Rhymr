<!DOCTYPE html>
<html>
<head>
  <title>Rhymr</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
	<body>
		<header>
			<div class="head-box">
				<% if current_user %>
					Signed in as <%= current_user.name %>
					<br/>
					<%= link_to "PROFILE", user_path(current_user.id) %> | <%= link_to 'LOGOUT', logout_path %>
				<% else %>
					<%= link_to 'LOGIN', login_path %> || <%= link_to 'SIGNUP', new_user_path %>
				<% end %>
			</div>
			<% if current_user %>
			<div class="new-limerick">
				<%= link_to "New Limerick", new_user_limerick_path(current_user.id) %>
				<% else %>
			</div>
			<% end %>
		</header>
		<h2 class="site-title"><%=link_to 'Rhymr', limericks_path %></h2>
		<h4 class="site-tagline">Your Resource for Limericks</h4>

		<%= yield %>

	</body>
</html>
